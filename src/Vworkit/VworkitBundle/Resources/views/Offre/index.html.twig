{% extends '::layout/layout.html.twig' %}

{% block body -%}
    <h1>Offre list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Projetoffre</th>
                <th>Descriptionoffre</th>
                <th>Dureeoffre</th>
                <th>Budgetoffre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.projet.id }}</td>
                <td>{{ entity.descriptionOffre }}</td>
                <td>{{ entity.dureeOffre }}</td>
                <td>{{ entity.budgetOffre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offre_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offre_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('offre_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
