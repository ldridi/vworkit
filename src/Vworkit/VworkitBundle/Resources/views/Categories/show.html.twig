{% extends('::layout/layout_admin.html.twig') %}

{% block body -%}
    <h1>Categories</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Descriptioncategories</th>
                <td>{{ entity.descriptionCategories }}</td>
            </tr>
            <tr>
                <th>Rolecategories</th>
                <td>{{ entity.roleCategories }}</td>
            </tr>
            <tr>
                <th>Nomcategories</th>
                <td>{{ entity.nomCategories }}</td>
            </tr>
            <tr>
                <th>Dateajoutcategories</th>
                <td>{{ entity.dateAjoutCategories|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_categorie') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_categorie_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
