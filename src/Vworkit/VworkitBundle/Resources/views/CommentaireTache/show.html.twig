{% extends('::layout/layout.html.twig') %}

{% block body -%}
    <h1>Tache</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Descriptiontache</th>
                <td>{{ entity.texteCommentaireTache }}</td>
            </tr>
            
            <tr>
                <th>Dateajouttache</th>
                <td>{{ entity.dateAjoutCommentaireTache|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Finajouttache</th>
                <td>{{ entity.user.nomUser }}</td>
            </tr>
            <tr>
                <th>Finajouttache</th>
                <td>{{ entity.tache.nomTache }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tache') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tache_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
