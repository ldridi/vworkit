{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Emploi list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomemploi</th>
                <th>Dureeemploi</th>
                <th>Societeemploi</th>
                <th>Dateajoutemploi</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('emploi_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomEmploi }}</td>
                <td>{{ entity.dureeEmploi }}</td>
                <td>{{ entity.societeEmploi }}</td>
                <td>{% if entity.dateAjoutEmploi %}{{ entity.dateAjoutEmploi|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('emploi_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('emploi_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('emploi_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
