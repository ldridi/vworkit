{% extends '::layout/layout.html.twig' %}
{% block body -%}
<div class="projet">
    {% if is_granted("ROLE_USER") %}
    {% include '::layout/header_user.html.twig' %}
    {% endif %}
    <div class="container" style="margin-bottom:50px;margin-top:0px;">

        <div class="row">
            <div class="col-md-9">

                <div class="panel">
                    <div class="tabbable tabs-left clearfix">
                        {% include '::layout/navigation_profil.html.twig' %}
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade  active in" id="home3">
                                <div class="row">
                                    <div class="col-md-10">
                                        <b style="font-size: 20px;">PROFILE-A PROPOS</b>
                                    </div>
                                    <div class="col-md-10">
            <div class="row" style="margin-top:20px;">
              {% if entities|length != 0 %}
                                {% for entity in entities %}
              
                                   
  <div class="col-sm-6 col-md-6">
    <div class="thumbnail">
        



      <div class="caption">

        <h3 class="text-center">{{ entity.titrePortfolio}}</h3>
        <p class="text-center">{{ entity.descriptionPortfolio}}</p>
        <p class="text-center"><b>Ajout√© le : {{ entity.dateajoutPortfolio|date('Y-m-d')}}</b></p>
        <a href="{{ path('portfolio_edit', { 'id': entity.id }) }}"><button style="border-radius:50%;" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-pencil"></i></button></a>
        <!--<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>-->
      </div>
      <a href="#"  data-toggle="modal" data-target="#lightbox"> 
      <img src="{{ asset(entity.image.WebPath) }}" class="img-responsive" style="height:200px;" width="100%">
      </a>
    </div>
  </div>

                                    
                                
                                
                                {% endfor %}
            {% else %}
            <div class="row" style="margin-top: 20px;">
                                <div class="col-md-12">
                                    <div class="alert alert-info">
                                            <b style="color:white;">Vous n'avez pas de portfolio pour le moment</b>
                                            <a href="{{ path('portfolio_new') }}"><button class="pull-right btn btn-sm btn-info" style="margin-top:-5px;">Voulez vous creer ?</button>
                                        </div>
                                   </div>     
                                
                            </div>
        
            
            {% endif %}
            </div>
        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           {% include '::layout/badge_profil.html.twig' %}
        </div>
    </div>
</div>
       
     <!-- code -->

<div class="modal fade" id="lightbox" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      
      <div class="modal-body affiche_image_grande">
        <img src="" alt="" class="" />
      </div>
      
    </div>
  </div>
</div>

     <!-- code --> 

{% endblock %}