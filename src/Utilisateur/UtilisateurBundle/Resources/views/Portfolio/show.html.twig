{% extends '::layout/layout.html.twig' %}

{% block body -%}
    <h1>Portfolio</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titreportfolio</th>
                <td>{{ entity.titrePortfolio }}</td>
            </tr>
            <tr>
                <th>Imageportfolio</th>
                <td>{{ entity.imagePortfolio }}</td>
            </tr>
            <tr>
                <th>Descriptionportfolio</th>
                <td>{{ entity.descriptionPortfolio }}</td>
            </tr>
            <tr>
                <th>Dateajoutportfolio</th>
                <td>{{ entity.dateAjoutPortfolio|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('portfolio') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('portfolio_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
