{% extends '::layout/layout.html.twig' %}
{% block body -%}
<div class="projet">
    {% if is_granted("ROLE_USER") %}
    {% include '::layout/header_user.html.twig' %}
    {% endif %}

    

    <!-- carousel -->
    <div class="container" style="margin-bottom:50px;margin-top:0px;">

        <div class="row">
            <div class="col-md-9">

                <div class="panel">
                    <div class="tabbable tabs-left clearfix">
                        {% include '::layout/navigation_profil.html.twig' %}
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade  active in" id="home3">
                                <div class="row">
                                    <div class="col-md-10">
                                        <b style="font-size: 20px;">PROFILE-A PROPOS</b>

                                    </div>
                                    <div class="col-md-5">
                                        <h5><font color="black">{{ entity.nomUser|upper }} {{ entity.prenomUser|upper }}</font></h5>
                                        <table class="table table-striped">
                                            <tr>
                                                <td><font color="black"><i class="glyphicon glyphicon-user "></i>&nbsp; Nom & Prenom : </font>{{ entity.nomUser}}</td>
                                            </tr>
                                            <tr>
                                                <td><font color="black"><i class="glyphicon glyphicon-home "></i>&nbsp; Addresse: </font>{{ entity.adresseUser}},{{ entity.villeUser}} ,{{ entity.etatUser}}</td>
                                            </tr>
                                            <tr>
                                                <td><font color="black"><i class="glyphicon glyphicon-envelope "></i>&nbsp; email : </font>{{ entity.email}}</td>
                                            </tr>
                                            <tr>
                                                <td><font color="black"><i class="glyphicon glyphicon-phone "></i>&nbsp; Tél : </font>{{ entity.telUser}}</td>
                                            </tr>
                                            <tr>
                                                <td><font color="black"><i class="glyphicon glyphicon-globe "></i>&nbsp; Site web : </font><a href="https://{{ entity.siteUser}}" target="_blink">{{ entity.siteUser}}</a></td>
                                            </tr>
                                        </table>

                                    </div>
                                    <div class="col-md-5" >
                                        <div class="well well-sm" style="background:#F7F7F7;">
                                        <h5><font color="black">INFORMATION</font></h5>
                                        {{ form_start(edit_form) }}
                                        <div  class="row">
                                            <div class="col-xs-12">    
                                                <label class="autre">Titre   </label>

                                                {{ form_widget(edit_form.titreUser) }}

                                                <br>
                                            </div>
                                            <div class="col-md-12">
                                                <label class="autre">Modifier votre image  </label>
                                                {{ form_widget(edit_form.image) }}<br>
                                            </div>
                                            <div class="col-xs-12">
                                                <i class="glyphicon glyphicon-plus-sign" style="color: black"></i>&nbsp;<label class="autre">Vos                                                    Competences :</label>
                                                {{ form_widget(edit_form.competence) }} 

                                                <br>
                                            </div>
                                            <div class="col-xs-12">    
                                                <label class="autre">Texte de présentation  </label>

                                                {{ form_widget(edit_form.descriptionUser) }}

                                                <br>
                                            </div>

                                            <div class="col-xs-12" style="margin-bottom: 20px;">
                                                {{ form_widget(edit_form.submit) }}
                                            </div>
                                        </div>
                                        {{ form_end(edit_form) }}

                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="tab-pane fade " id="profile3">
                                <div class="row">
                                    <div class="col-md-10">
                                        <b style="font-size: 20px;">PROFILE-PROFIL</b>

                                    </div>
                                    <div class="col-md-5">
                                        <!-- design -->
                                        <h5><font color="black">DESIGNS SKILLS</font></h5>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <!-- programmation -->
                                        <h5><font color="black">DESIGNS SKILLS</font></h5>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <!-- Office -->
                                        <h5><font color="black">Office SKILLS</font></h5>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <div class="progress progress-striped active">
                                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 60%"><span class="sr-only"></span>Anglais</div>
                                        </div>
                                        <!-- plaisir -->
                                        <h5><font color="black">LOISIR</font></h5>
                                        {% render(controller('UtilisateurBundle:Plaisir:new')) %}
                                        <hr>
                                        <!-- language -->
                                        <h5><font color="black">LANGUE</font></h5>
                                        {% render(controller('UtilisateurBundle:Langue:new')) %}
                                        <hr>
                                        <h5><font color="black">resume SKILLS</font></h5>
                                        <button class="btn btn-sm btn-success">Télecharger mon resume</button>

                                    </div>

                                    <div class="col-md-5">
                                        <h5><font color="black">EXPERIENCE</font></h5>
                                        {% render(controller('UtilisateurBundle:Emploi:new')) %}
                                        <hr>
                                        <h5><font color="black">Education</font></h5>
                                        {% render(controller('UtilisateurBundle:Education:new')) %}
                                        <hr>
                                        <h5><font color="black">CERTIFICATIONS</font></h5>
                                        {% render(controller('UtilisateurBundle:Certificat:new')) %}
                                        <hr>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            {% include '::layout/badge_profil.html.twig' %}
        </div>
    </div>
</div>
{% endblock %}