{% for historique in historiques %}
    <a href="{{path('projet_show',{'id' : historique.projet.id} ) }}" style="color:black;">
    <div class="col-md-2" >
        <div class="histo_projet">
            <i class="glyphicon glyphicon-screenshot"></i>&nbsp;<b>Visité : {{ historique.dateAjoutHistorique|date('Y-m-d') }}</b></br>
            <i class="glyphicon glyphicon-screenshot"></i>&nbsp;<b>{{ historique.projet.titreProjet }}</b></br>
            {% if(historique.projet.etat.id != 1) %}
                <span class="label label-info">Ouvert</span>
            {% else %}
                <span class="label label-danger">Fermé</span>
            {% endif %}
        </div>
    </div>
    </a>

{% endfor %}
