{% extends '::layout/layout.html.twig' %}
{% block body -%}
<div class="projet">
    {% if is_granted("ROLE_USER") %}
    {% include '::layout/header_user.html.twig' %}
    {% endif %}
    <div class="container" style="margin-bottom:50px;margin-top:0px;">

        <div class="row">
            <div class="col-md-9">

                <div class="panel">
                    <div class="tabbable tabs-left clearfix">
                        {% include '::layout/navigation_profil.html.twig' %}
                        <div id="myTabContent" class="tab-content">


                            <div class="row">
                                <div class="col-md-10">
                                    <b style="font-size: 20px;">PROFILE-INFORMATIONS</b>
                                    <p>
                                        Vos coordonnées ne seront pas visibles sur le site. Elles seront par contre transmises aux porteurs de projets qui vous sélectionneront. Cependant, si vous choisissez l'abonnement Pro Max, vos coordonnées seront visibles sur le site, et vous pourrez vous faire contacter directement par des clients. Seule  adresse email sera cachée aux personnes ne s'étant pas identifiées (pour éviter le spam).
                                    </p>
                                </div>
                                <div class="col-md-10">
                                    {{ form_start(edit_form) }}
                                    <div class="row" style="margin-top: 20px;">
                                        {% set flashbag_notices = app.session.flashbag.get('notice') %}
                                        {% if flashbag_notices is not empty %}

                                        {% for notice in flashbag_notices %}
                                        <div class="col-xs-12">  
                                            <div class="alert alert-success">
                                                <b style="color:white;">{{notice}}</b>
                                            </div>
                                        </div>
                                        {% endfor %}

                                        {% endif %}


                                        <div class="col-xs-6">    
                                            <label class="autre"> Nom  </label>

                                            <a data-placement="top" data-toggle="tooltip" data-original-title="Entrer votre nom">
                                                {{ form_widget(edit_form.nomUser) }}
                                            </a>
                                            <br>
                                        </div>
                                        <div class="col-xs-6">    
                                            <label class="autre"> Prenom  </label>
                                            <a data-placement="top" data-toggle="tooltip" data-original-title="Entrer votre nom">
                                                {{ form_widget(edit_form.prenomUser) }}
                                            </a>
                                            <br>
                                        </div>
                                        <div class="col-xs-6">    
                                            <label class="autre"> Adresse  </label>

                                            {{ form_widget(edit_form.adresseUser) }}

                                            <br>
                                        </div>
                                        <div class="col-xs-6">    
                                            <label class="autre"> Code  </label>

                                            {{ form_widget(edit_form.codeUser) }}

                                            <br>
                                        </div>
                                        <div class="col-xs-6">    
                                            <label class="autre"> Etat  </label>

                                            {{ form_widget(edit_form.etatUser) }}

                                            <br>
                                        </div>
                                        <div class="col-xs-6">    
                                            <label class="autre"> Ville  </label>

                                            {{ form_widget(edit_form.villeUser) }}

                                            <br>
                                        </div>

                                        <div class="col-xs-6">    
                                            <label class="autre"> Societe  </label>

                                            {{ form_widget(edit_form.societeUser) }}

                                            <br>
                                        </div>
                                        <div class="col-xs-6">    
                                            <label class="autre"> Télephone  </label>

                                            {{ form_widget(edit_form.telUser) }}

                                            <br>
                                        </div>
                                        <div class="col-xs-12">    
                                            <label class="autre"> Télephone secondaire  </label>

                                            {{ form_widget(edit_form.telsecUser) }}

                                            <br>
                                        </div>
                                        <div class="col-xs-12" style="margin-bottom: 20px;">
                                            {{ form_widget(edit_form.submit) }}
                                        </div>
                                    </div>

                                    {{ form_end(edit_form) }}

                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
            {% include '::layout/badge_profil.html.twig' %}
        </div>
    </div>
</div>
{% endblock %}