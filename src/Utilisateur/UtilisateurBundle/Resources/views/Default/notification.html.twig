{% extends '::layout/layout.html.twig' %}
{% block body -%}
<div class="projet">
    {% if is_granted("ROLE_USER") %}
    {% include '::layout/header_user.html.twig' %}
    {% endif %}
    <div class="container" style="margin-bottom:50px;margin-top:0px;">

        <div class="row">
            <div class="col-md-9">

                <div class="panel">
                    <div class="tabbable tabs-left clearfix">
                        {% include '::layout/navigation_profil.html.twig' %}
                        <div id="myTabContent" class="tab-content">


                            <div class="row">
                                <div class="col-md-10">
                                    <b style="font-size: 20px;">PROFILE-NOTIFICATION</b>
                                    <p>
                                        Vos coordonnées ne seront pas visibles sur le site. Elles seront par contre transmises aux porteurs de projets qui vous sélectionneront. Cependant, si vous choisissez l'abonnement Pro Max, vos coordonnées seront visibles sur le site, et vous pourrez vous faire contacter directement par des clients. Seule  adresse email sera cachée aux personnes ne s'étant pas identifiées (pour éviter le spam).
                                    </p>
                                </div>
                                <div class="col-md-10">
                                    {{ form_start(edit_form) }}
                                    <div class="row" style="margin-top: 20px;">
                                        {% set flashbag_notices = app.session.flashbag.get('notice') %}
                                        {% if flashbag_notices is not empty %}

                                        {% for notice in flashbag_notices %}
                                        <div class="col-xs-12">  
                                            <div class="alert alert-success">
                                                <b style="color:white;">{{notice}}</b>
                                            </div>
                                        </div>
                                        {% endfor %}

                                        {% endif %}
                                        <div class="col-xs-12">
                                            <label class="toggle"><input type="checkbox" name="choix_paiement" checked> <span class="handle"></span></label>
                                            &nbsp;&nbsp;<b style="color:black;">M'avertir par email quand un projet relevant de mon domaine d'expertise est posté.</b><br>
                                            <i class="glyphicon glyphicon-lock" style="color:black;"></i>&nbsp;<label class="autre">Budget Minimum <font color="red">*</font></label>
                                            <b style="color:red;">{{ form_errors(edit_form.budgetUser) }}</b>

                                            {{ form_widget(edit_form.budgetUser) }}

                                            <br>
                                        </div>


                                        <div class="col-xs-12"> 
                                            <label class="toggle"><input type="checkbox" name="choix_paiement" checked> <span class="handle"></span></label>
                                            &nbsp;&nbsp;<b style="color:black;">Recevoir la newsletter Vworkit (environ un envoi par mois)</b>
                                            <br>
                                        </div>
                                        <div class="col-xs-12" style="margin-bottom: 20px;">
                                            {{ form_widget(edit_form.submit) }}
                                        </div>
                                    </div>
                                    {{ form_end(edit_form) }}

                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
            {% include '::layout/badge_profil.html.twig' %}
        </div>
    </div>
</div>
{% endblock %}